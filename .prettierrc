{
   "printWidth": 100,
   "tabWidth": 3,
   "trailingComma": "none",
   "semi": true,
   "htmlWhitespaceSensitivity": "css",
   "quoteProps": "as-needed",
   "overrides": [
      {
         "files": "*.css",
         "options": {
            "parser": "css"
         }
      },
      {
         "files": "*.scss",
         "options": {
            "parser": "scss"
         }
      }
   ]
}
